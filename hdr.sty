% -------- Package Inclusion --------
% Package Management
\RequirePackage{fancyhdr}
\RequirePackage{titlesec}  % may have compatibility issue with hyperref

% Custom Header & Footer Style
\pagestyle{fancy}
\fancyhead[RO, LE]{\thepage}
\fancyhead[LO]{\leftmark}
\fancyhead[RE]{\rightmark}
\fancyfoot[]{}


% -------- Page Settings --------
% Remove extra page caused by mainmatter
\renewcommand{\mainmatter}{
    \clearpage  % default is clear double page
    \@mainmattertrue
    \pagenumbering{arabic}
}


