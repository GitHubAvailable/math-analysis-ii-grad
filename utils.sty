\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{utils}[2024/09/03 v1.0 by GitHubAvailable]

% -------- Package Inclusion --------
% Package Management
\RequirePackage{import}
\RequirePackage[subpreambles=true]{standalone}  % enable each part to be compiled separately

% Math Symbol Libraries
\RequirePackage{amsmath, amssymb, amsthm} % AMS libs
\RequirePackage{dsfont}  % for mathbb font
\RequirePackage{mathrsfs}  % for mathscr

% Text Effects
% Default Settings
% linkcolor -- red
% anchorcolor -- black
% citecolor -- green
% filecolor -- cyan
% menucolor -- red
% runcolor -- cyan - same as file color
% urlcolor -- magenta
\RequirePackage{hyperref}
\hypersetup{
    colorlinks=true,
    linktoc=all,  % options: none, section, page, all
    linkcolor=blue
}
\RequirePackage{cleveref}  % must after amsmath

% Images
\RequirePackage{graphicx} % for include graphics
\RequirePackage{float}
\RequirePackage{subfigure} % needed even for subcaption package
\RequirePackage{subcaption}

% -------- Utility Definitions --------
% Symbols
\newcommand{\C}{\mathbb{C}}
\newcommand{\R}{\mathbb{R}}
\newcommand{\Q}{\mathbb{Q}}
\newcommand{\Z}{\mathbb{Z}}
\newcommand{\N}{\mathbb{N}}
\newcommand{\F}{\mathbb{F}}
\newcommand{\pwset}{\mathscr{P}}
\newcommand{\indic}{\mathds{1}}

% Math Operators
\DeclareMathOperator{\ch}{ch}
\DeclareMathOperator{\vspan}{span}
\DeclareMathOperator{\ind}{ind}
\DeclareMathOperator{\adj}{adj}
\DeclareMathOperator{\lowlim}{\underline{\lim}}
\DeclareMathOperator{\uplim}{\overline{\lim}}

% Environments
\theoremstyle{definition}
\newtheorem{definition}{Definition}[section]

\theoremstyle{definition}
\newtheorem{theorem}{Theorem}[section]

\theoremstyle{definition}
\newtheorem{corollary}{Corollary}[theorem]

\theoremstyle{remark}
\newtheorem*{remark}{Remark}

\theoremstyle{definition}
\newtheorem{question}{Question}[chapter]

% -------- Dependency Settings --------
\Crefname{definition}{Definition}{Definitions}  % counter, single, plural
\Crefname{theorem}{Theorem}{Theorems}
\Crefname{corollary}{Corollary}{Corollaries}
\Crefname{question}{Question}{Questions}